<%= form_for(brand, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="from-group">
    <div class="col-sm-3">
      <% action = action_for_button(action_name) %>
      <%= f.submit "#{action} Brand", class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
