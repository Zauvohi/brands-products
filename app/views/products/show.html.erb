<h2>Product Information</h2>
<div class="row">
  <div class="col-sm-12">
    <h4>
      Product No.<%= @product.id %> - <%= @product.name %> (<%= @product.brand.name %>)
      <small><%= link_to 'Edit', edit_product_path(@product) %></small>
    </h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-5">
    <h4>Price: $<%= @product.price %></h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-10">
    <h4>Description</h4>
    <p>
      <%= @product.description %>
    </p>
  </div>
</div>
<br>
<%= button_to 'Back', products_path, method: :get, class: 'btn btn-default' %>
